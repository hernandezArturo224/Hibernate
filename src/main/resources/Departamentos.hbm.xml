<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
<class name="modelos.Departamentos" table="departamento">
	<id name="codigo" type="int">
		<column name="codgio"/>
	</id>
	
	<property generated="never" lazy="false" name="nombre" type="java.lang.String">
   		<column name="nombre"/>
  	</property>
  	
  	<property generated="never" lazy="false" name="cod_responsable" type="int">
   		<column name="cod_responsable"/>
  	</property>


</class>

</hibernate-mapping>